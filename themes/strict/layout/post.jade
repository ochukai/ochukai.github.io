include _views/post
include _views/menu
extends _views/main

block main
  +post(page, 'post')
  
  section.reward 
    a(class="btn-reward" href="#") 打赏
    div.reward-wrapper.clearfix
      img(src="/img/wechat.png")

  if theme.disqus_shortname && page.comments
    div.comments
      div#disqus_thread
        noscript.
          Please enable JavaScript to view the <a href="//disqus.com/?ref_noscript">comments powered by Disqus.</a>

block head
  title
    = page.title + ' - ' + config.title

block menu
  +menu('post')
